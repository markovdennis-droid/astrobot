# -*- coding: utf-8 -*-
import argparse, random, sys

SIGNS = ["aries","taurus","gemini","cancer","leo","virgo","libra","scorpio","sagittarius","capricorn","aquarius","pisces"]
STYLES = {"classic":"Классический","humor":"Юморной","mystic":"Мистический","motivation":"Мотивирующий"}

def generate(sign="aries", style="classic", lang="ru", dt=None):
    moods = ["calm","bright","energetic","inspiring","mystic","decisive"]
    tips  = ["trust your intuition","one step at a time","be kind but firm","ask instead of guessing"]
    return (
        f"{sign.upper()} — {style} [{lang}]" + (f" | {dt}" if dt else "") + "\n"
        f"Day outlook: {random.choice(moods)}. Advice: {random.choice(tips)}.\n"
        f"Lucky number: {random.randint(1,99)}."
    )

def main():
    p = argparse.ArgumentParser(description="Astrobot — mini CLI")
    p.add_argument("--sign", type=str, help="zodiac sign (en)")
